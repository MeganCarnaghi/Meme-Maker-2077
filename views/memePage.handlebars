<header class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <a href="index.html"><img class="logo-img" src="newlogo.png" alt="logo" /></a>
            <p class="heading-text">
                Follow the steps below to create your meme!
            </p>
            <a href="index.html" class="btn btn-primary mainButtons">HOME</a>
        </div>
    </div>
</header>

<!-- Start of Meme Creator -->
<div class="container mt-3 meme-generator">
    <div class="row">
        <div class="col-sm-6">
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="instructions">
                        <h2 class="h2-instructions">Step 1: Upload an Image</h2>
                        <div class="fileUpload btn btn-primary">
                            <input id="img-input" type="file" class="upload" accept="image/*" />
                            <span>Choose File</span>
                        </div>
                        <input type="text" id="choose-file" placeholder="No File Selected" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="instructions">
                        <h2 class="h2-instructions">Step 2: Add Your Text</h2>
                        <textarea id="top">Top Text</textarea>
                        <div> Text Size:
                            <input type="range" id="top-text-size-input" min="0.05" max="0.25" value="0.15"
                                step="0.01" /></div>

                        <textarea id="bottom">Bottom Text</textarea>
                        <div>Text Size:
                            <input type="range" id="bottom-text-size-input" min="0.05" max="0.25" value="0.15"
                                step="0.01" /> </div>
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="instructions">
                        <h2 class="h2-instructions">Step 3: Create Your Meme</h2>
                        <button class="btn btn-primary" id="generate-btn">Generate Meme</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 align-self-center">
            <!--Nested rows within a column-->
            <div class="row">
                <div class="col-12" id="canvas">
                    <canvas id="meme-canvas"> </canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End of Meme Creator -->
<!-- Start of Footer -->
<footer class="container">
    <p class="float-end mb-1">
        <a class="top" href="#">Back to top</a>
    </p>
</footer>
<!-- End of Footer -->